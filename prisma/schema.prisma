generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user  {
id      Int      @id @default(autoincrement())
  email   String   @unique
  Fullname    String 
  password String 
  accountStatus Boolean @default(true)
}

// this table will manage login sessons for the users
// this is the table as well where a person can tell req to remove some other sesson alive 
// data that user will get is the Date of login 

model loginRecord { 
 id      Int    @unique
 date DateTime 
  token String @unique
}

// deleted account 
model deletedAcc {
  id Int @unique
  date DateTime
}